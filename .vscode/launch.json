
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron.cmd"
      },
      "program": "${workspaceRoot}/app/index.js",
      "protocol": "legacy"
    },
    {
      "name": "Electron Renderer Process",
      "type": "chrome",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": [
        "${workspaceRoot}/app/index.js",
        "--remote-debugging-port=9222"
      ],
      "webRoot": "${workspaceRoot}/app"
    }
  ]
}